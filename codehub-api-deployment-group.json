{
   "applicationName": "codehub-api",
   "autoRollbackConfiguration": {
      "enabled": true,
      "events": [ "DEPLOYMENT_FAILURE" ]
   },
   "blueGreenDeploymentConfiguration": {
      "deploymentReadyOption": {
         "actionOnTimeout": "CONTINUE_DEPLOYMENT",
         "waitTimeInMinutes": 0
      },
      "terminateBlueInstancesOnDeploymentSuccess": {
         "action": "TERMINATE",
         "terminationWaitTimeInMinutes": 5
      }
   },
   "deploymentGroupName": "codehub-api-dg",
   "deploymentStyle": {
      "deploymentOption": "WITH_TRAFFIC_CONTROL",
      "deploymentType": "BLUE_GREEN"
   },
   "loadBalancerInfo": {
      "targetGroupPairInfoList": [
        {
          "targetGroups": [
             {
                 "name": "dev-codehub-api-target1"
             },
             {
                 "name": "dev-codehub-api-target2"
             }
          ],
          "prodTrafficRoute": {
              "listenerArns": [
                  "arn:aws:elasticloadbalancing:us-east-1:797335914619:listener/app/dev-codehub-search/d7eedb97f0dcc767/ab55398ee6252fc5"
              ]
          }
        }
      ]
   },
   "serviceRoleArn": "arn:aws:iam::797335914619:role/BAHCodeDeployRoleForECS",
   "ecsServices": [
       {
           "serviceName": "codehub-api-service",
           "clusterName": "codehub-cluster"
       }
   ]
}
